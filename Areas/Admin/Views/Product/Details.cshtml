@model Product

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title text-center">@Model.Title</h3>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-4 font-weight-bold">Author:</div>
                <div class="col-md-8">@Model.Author</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4 font-weight-bold">Description:</div>
                <div class="col-md-8">@Model.Description</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4 font-weight-bold">Price:</div>
                <div class="col-md-8">$@Model.ListPrice</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4 font-weight-bold">ISBN :</div>
                <div class="col-md-8">@Model.ISBN</div>
            </div>
          
        </div>
        <div class="card-footer text-center">
            <a asp-action="Index" asp-controller="Product" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>
