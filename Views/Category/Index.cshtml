@{
}
@* defining model same as controller(what we are passing in controller) *@
@model List<Category>

<h2>CategoryList </h2>
<a asp-controller="Category" asp-action="Create">New Category</a>
<table class="table border">
    <thead>
    <tr>
        <th>Category Name</th>
        <th>Display order</th>
        <th colspan="2">Actions</th>
         
    </tr>
    </thead>
    <tbody>
        
        @foreach(var obj in Model.OrderBy(u=>u.DisplayOrder))
        {
            <tr>
                <td>
                    @obj.Name
                </td>
                <td>
                    @obj.DisplayOrder
                </td>
                <td><a asp-route-id="@obj.Id" asp-action="Edit" asp-controller="Category">Edit</a> </td>
                <td><a asp-route-id="@obj.Id" asp-action="Delete" asp-controller="Category" >Delete</a></td>
            </tr>
        }
    </tbody>
</table>